<div class="container">
    <div class="row">
        <div class="col-1">
            <div class="breadcrumb">
                <a class="btn btn-success btn-sm" href="/admin/foodType/index" role="button">
                    <i class="fas fa-chevron-left"></i>
                    Trở lại
                </a>
            </div>
        </div>
        <div class="col-10">
            <center>
                <h2 style="color: rgb(0, 0, 0)"><i class="fas fa-utensils"></i> Thêm loại sản phẩm</h2>
            </center>
        </div>
        <div class="col-1"></div>
    </div>
    <form method="POST" action="/admin/foodtype/store" onsubmit="return validateForm()">
        <div class="form-group d-flex">
            <input type="text" class="form-control" id="nameType" name="nameType" placeholder="Tên loại" />
            <button type="submit" class="btn btn-primary ml-2">Thêm loại</button>
        </div>
        {{#if message}}
        <div class="alert alert-danger" role="alert">
            {{message}} 
        </div>
        {{/if}}
    </form>
</div>

<script>
        function validateForm() {
        const nameType = document.getElementById('nameType').value.trim();

        if (!nameType) {
            alert('Vui lòng điền tên loại sản phẩm');
            return false;
        }

        // Thêm các kiểm tra khác nếu cần
        return true;
    }
</script>