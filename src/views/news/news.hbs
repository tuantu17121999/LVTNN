<div class="row mt-3">
    {{#newss}}
    <div class="col-sm-4 col-lg-3">

        <div class="card">
            <!--HÌNH ẢNH-->
            <a href="/news/{{this.slug}}/detail">
                <img src="/upload/{{this.imageNews}}" class="card-img-top" alt="{{this.nameNews}}" />
            </a>
            <!--TÊN MÓN-->
            <div class="card-body">
                <a href="/news/{{this.slug}}/detail">
                    <h5 class="card-title">{{this.nameNews}}</h5>
                </a>
            </div>
            <!--GIÁ BÁN / NÚT MUA-->
            <div class="row next-bar">
                    <button style=" width: 100%; " type="button" class="btn btn-danger btn-lg btn-next-item"> <a href="/news/{{this.slug}}/detail" style="color:white"><b>Xem chi tiết</b></a> </button>
            </div>
        </div>
    </div>
    {{/newss}}
</div>