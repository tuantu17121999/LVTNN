<div id="step1" class="step-form active">
    <div class="form_top row bg-white p-5 rounded-lg">
        <div class="col-md-6">
            <h3 class="delivery_title mb-4">Thông tin người nhận</h3>
            <div class="form-group">
                <label for="inputFullname"><small>Họ và tên <span class="text-danger">*</span></small></label>
                <input type="text" name="name" id="inputFullname" class="form-control rounded-pill"
                    placeholder="Họ và tên" value="{{address.fullName}}" required>
            </div>
            <div class="form-group">
                <label for="inputPhone"><small>Số điện thoại <span class="text-danger">*</span></small></label>
                <input type="tel" name="phone" id="inputPhone" class="form-control rounded-pill" maxlength="10"
                    placeholder="Số điện thoại" value="{{address.phone}}" required>
            </div>
        </div>
        <div class="col-md-6">
            <h3 class="delivery_title mb-4">Địa chỉ</h3>
            <div class="form-group">
                <label for="inputAddress"><small>Địa chỉ (Số nhà, Tên đường) <span
                            class="text-danger">*</span></small></label>
                <input type="text" name="address" id="inputAddress" class="form-control rounded-pill"
                    placeholder="vd: 12/12A Cao Thắng" value="{{address.address}}" required>
            </div>
            <div class="form-group d-flex">
                <input type="text" name="wards" id="inputWards" class="form-control rounded-pill"
                    placeholder="Phường/Xã" value="{{address.wards}}" required>
                <input type="text" name="district" id="inputDistrict" class="form-control rounded-pill"
                    placeholder="Quận/Huyện" value="{{address.district}}" required>
                <input type="text" name="city" id="inputCity" class="form-control rounded-pill"
                    placeholder="Tỉnh/Thành Phố" value="{{address.city}}" required>
            </div>
        </div>
        <div class="form-group col-12 text-center mt-4">
            <button type="button" onclick="nextStep(2)" class="btn btn-danger btn-lg rounded-pill px-5">
                TIẾP TỤC
            </button>
        </div>
    </div>
</div>