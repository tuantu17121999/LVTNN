<div class="col-4">
  <a class="dropdown-item active1" href="/customer" id="memberInfo">
    <span class="icon"><i class="fas fa-user-alt"></i></span>
    <span class="text">Thông tin tài khoản</span>
  </a>
  <a
    class="dropdown-item"
    href="/customer/history/{{customer._id}}"
    id="memberHistory"
    :focus
  >
    <span class="icon"><i class="fas fa-history"></i></span>
    <span class="text">Lịch sử đơn hàng</span>
  </a>
  <a
    class="dropdown-item"
    href="/customer/address/{{customer._id}}"
    id="memberAddress"
  >
    <span class="icon"><i class="fas fa-map-marked-alt"></i></span>
    <span class="text">Địa chỉ giao hàng</span>
  </a>
</div>
<div class="col-8">
  <form action="/customer/edit/{{customer._id}}" method="POST">
    <div class="head_3 bg-gray px-3 border-radius-20">
      Thông tin tài khoản
      <button
        type="submit"
        class="btn btn-danger border-radius float-right"
      >SỬA</button>
    </div>
    <div class="box-left clearfix mt-4">
      <div class="form-group">
        <input
          type="text"
          class="form-control border-radius"
          id="fullName"
          name="fullName"
          placeholder="Họ và tên..."
          value="{{customer.name}}"
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          class="form-control border-radius"
          id="email"
          name="email"
          placeholder="Email..."
          value="{{customer.email}}"
        />
      </div>
      <div
        class="btn-group"
        id="sex"
        role="group"
        aria-label="Basic radio toggle button group"
      >
        <input
          type="radio"
          class="btn-check"
          name="sex"
          value="nam"
          id="btnradio1"
          autocomplete="off"
          checked
        />
        <label
          class="btn btn-outline-danger border-radius-left"
          for="btnradio1"
        >Nam</label>

        <input
          type="radio"
          class="btn-check"
          name="sex"
          value="nữ"
          id="btnradio2"
          autocomplete="off"
        />
        <label
          class="btn btn-outline-warning border-radius-right"
          for="btnradio2"
        >Nữ</label>

        <input
          type="radio"
          class="btn-check"
          name="sex"
          value="khác"
          id="btnradio3"
          autocomplete="off"
        />
        <label
          class="btn btn-outline-success border-radius"
          for="btnradio3"
        >Khác</label>
      </div>
    </div>
  </form>
</div>